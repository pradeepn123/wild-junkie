<!-- contact-us.liquid -->
{% form 'contact', id: 'contact-form' %}
<section>
  <h2>Section 1: Personal Information</h2>
  <div class="form-group">
    <label for="first_name">First Name</label>
    <input type="text" id="first_name" name="contact[First Name]" required>
  </div>
  <div class="form-group">
    <label for="last_name">Last Name</label>
    <input type="text" id="last_name" name="contact[Last Name]" required>
  </div>
  <div class="form-group">
    <label for="phone_number">Phone Number (Only US)</label>
    <input type="tel" id="phone_number" name="contact[Phone Number]" pattern="\(\d{3}\) \d{3}-\d{4}" placeholder="(xxx) xxx-xxxx" required>
    <small>Format: (xxx) xxx-xxxx</small>
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" id="email" name="contact[email]" required>
  </div>
</section>

<section>
  <h2>Section 2: Business Information</h2>
  <div class="form-group">
    <label for="company">Company</label>
    <input type="text" id="company" name="contact[Company]">
  </div>
  <div class="form-group">
    <label for="website">Website</label>
    <input type="url" id="website" name="contact[Website]">
  </div>
  <div class="form-group">
    <label for="sales_tax_id">Sales Tax ID</label>
    <input type="text" id="sales_tax_id" name="contact[Sales Tax ID]">
  </div>
</section>

<section>
  <h2>Section 3: Shipping Address</h2>
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" id="address" name="contact[Address]" required>
  </div>
  <div class="form-group">
    <label for="address2">Address Line 2</label>
    <input type="text" id="address2" name="contact[Address Line 2]">
  </div>
  <div class="form-group">
    <label for="city">City</label>
    <input type="text" id="city" name="contact[City]" required>
  </div>
  <div class="form-group">
    <label for="state">State</label>
    <input type="text" id="state" name="contact[State]" required>
  </div>
  <div class="form-group">
    <label for="zipcode">Zipcode</label>
    <input type="text" id="zipcode" name="contact[Zipcode]" pattern="\d{5}" required>
    <small>5-digit zipcode</small>
  </div>
  <div class="form-group">
    <label for="country">Country (Only United States)</label>
    <select id="country" name="contact[Country]" required>
      <option value="United States">United States</option>
    </select>
  </div>
</section>

<div class="form-group">
   <button type="submit">Submit</button>
</div>
{% endform %}
