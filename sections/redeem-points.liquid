{%- schema -%}
  {
    "name": "Redeem points",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section title"
      },
      {
        "type": "range",
        "id": "title_font_size",
        "label": "Title font size",
        "min": 0,
        "max": 100,
        "step": 2,
        "default": 48
      },
      {
        "type": "text",
        "id": "section_subtitle",
        "label": "Section subtitle"
      },
      {
        "type": "range",
        "id": "subtitle_font_size",
        "label": "Subtitle font size",
        "min": 0,
        "max": 50,
        "step": 2,
        "default": 16
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
      }, 
      {
        "type": "range",
        "id": "button_font_size",
        "label": "Button font size",
        "min": 0,
        "max": 30,
        "step": 2,
        "default": 20
      },
      {
        "type": "color",
        "id": "button_colour",
        "label": "Button colour"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "blocks": [
      {
        "type": "select",
        "name": "select",
        "settings": [
            {
              "type": "text",
              "id": "points_title",
              "label": "Points title"
            },
            {
              "type": "text",
              "id": "points_description",
              "label": "Points description"
            }
        ]
      }
    ],
    "presets": [
      {
        "name": "Redeem points"
      }
    ]
  }
{%- endschema -%}