<section class="sale-section">
    <div class="sale-block">
        {% for block in section.blocks %}
        <a href="{{block.settings.link }}"><div class="sale-icon">   
          <h2 class="sale-heading">{{block.settings.heading}}</h3>
           <p class="sale-paragraph1">{{block.settings.sub-text1}}</p>
           <p class="sale-paragraph2">{{block.settings.sub-text2}}</p>
           <span class="sale-amount">{{block.settings.sale-icon}}</span>
        </div></a>
        {% endfor %}
    </div>
</section>

{% schema %}
{
  "name": "sale-offers",
  "settings": [
   
],

"blocks": [
{
  "type": "select",
  "name": "select",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default":"SALE"
    },
    
    {
      "type": "text",
      "id": "sub-text1",
      "label": "sub-text1",
      "default":"UNTIL STOCKS LAST"
    },

    {
      "type": "text",
      "id": "sub-text2",
      "label": "sub-text2",
      "default":"UNDER"
    },

    {
      "type": "html",
      "id": "sale-icon",
      "label": "sale-icon"
    },

    {
      "type": "url",
      "id": "link",
      "label": "Icon link"
    }
]
}
],

"presets": [
{
  "name": "Sale-offers"
}
]

}
{% endschema %}
