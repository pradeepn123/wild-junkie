{% style %}





{% endstyle %}

{% liquid
  assign featured_media = current_variant.featured_media | default: product.featured_media
%}

<div class="variant-picker-modal__body" data-variant-picker-modal-body data-api-b2b-drawer-section>

{% comment %} progress bar as new design doesn't contain it {% endcomment %}
  {% comment %} <p class="b2b-cart-drawer__message">Add 16 more pieces to get 20% off.</p>
  <p
    class="b2b-cart-drawer__progress"
    data-limit="{{ limit }}"
    data-cart-total-price="{{ cart_total_price }}"
    {% if animations_enabled %}
      data-aos="fade-up"
      data-aos-delay="{{ animation_delay }}"
      {%- assign animation_delay = animation_delay | plus: 100 -%}
    {% endif %}
  >
    <progress
      class="cart__message__progress"
      data-b2b-drawer-progress
      value="40"
      max="100"
    ></progress>
  </p> {% endcomment %}
  <div class="variant-picker-modal__content" data-variant-picker-modal-content>
    <div class="b2b-product-info-block">
      <img
        class="b2b-product-image"
        src="//cdn.shopify.com/s/files/1/0078/2178/7200/products/image_087b7e44-54f0-4f01-96e8-3873724a54fd_160x.jpg?v=1677702852"
        alt="Cowboy Hat Air Freshener - Bubblegum"
      >
      <div class="b2b-cart-product-info">
        <div>
          <h4 class="b2b-cart-item-title">{{- product.title | strip_html -}}</h4>
          <p class="b2b-cart-item-price">$6.00</p>
        </div>
      </div>
    </div>
  </div>

  <div class="b2b-size-chart-content">
        <div class="b2b-size-chart-title">Choose your sizes</div>
        <span class="radio__button ">
          <input
            type="radio"
            class="radio__input"
            data-single-option-selector
            data-index="option{{ option.position }}"
            name="options[{{ option.name | escape_once }}]"
            value="{{ value | escape_once }}" id="{{ input_id }}"
            {% unless is_b2b_customer %}
              {% if value == current_value %}checked{% endif %}
            {% endunless %}
          >
          <label for="{{ input_id }}" class="radio__label">
            <span>{{ value }}</span>
          </label>
        </span>
            <span class="b2b-radio__button">
                <input type="checkbox" class="checkbox__input" value="Small" id="b2b-size-small">
                <label class="b2b-radio__label">
                  <span>Medium</span>
                </label>
              </span>
              <span class="b2b-radio__button">
                <input type="checkbox" class="checkbox__input">
                <label class="b2b-radio__label">
                  <span>Large</span>
                </label>
              </span>
              <span class="b2b-radio__button">
                <input type="checkbox" class="checkbox__input">
                <label class="b2b-radio__label">
                  <span>Xtra Large</span>
                </label>
              </span>
              <span class="b2b-radio__button">
                <input type="checkbox" class="checkbox__input">
                <label class="b2b-radio__label">
                  <span>2x Large</span>
                </label>
              </span>
            </div>  

  <div class="b2b-color-swatch">
    <div class="b2b-color-swatch-title">Choose your colors</div>
  </div>

  

  <div class="b2b-cart-variants-quantity">
    <p>Variants</p>
    <p>Quantity</p>
    <p>Total Price</p>
  </div>
  
  

</div>


