<section class="shipping-flex">
    <div class="offer-block">
        {% for block in section.blocks %}
        <div class="icon">
           {{block.settings.icon}}
           <p class="offer-paragraph">{{block.settings.paragraph}}</p>
           <h3 class="offer-subtext">{{block.settings.sub-text}}</h3>
        </div>
        {% endfor %}
    </div>
</section>

