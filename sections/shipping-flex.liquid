],

"blocks": [
{
  "type": "select",
  "name": "select",
  "settings": [
    {
      "type": "html",
      "id": "icon",
      "label": "icon"
    },
    
    {
      "type": "text",
      "id": "paragraph",
      "label": "paragraph"
    },

    {
      "type": "text",
      "id": "sub-text",
      "label": "sub-text"
    }
]
}
],

